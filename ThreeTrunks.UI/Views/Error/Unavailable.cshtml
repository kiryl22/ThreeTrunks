@{
    Layout = "~/Views/Shared/_ErrorLayout.cshtml";
    ViewBag.Title = "3stvola.by";
}

<style>
    .body {
        position: absolute;
        right: 0;
        color: white;
        text-align: center;
        width: 100%;
        height: 100%;
        background: url("/content/images/3tree.png");
        background-position: center;
        background-size: 50%;
        background-repeat: no-repeat;
    }
</style>


<div class="body">
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div>
            <h3>@ViewBag.Message</h3>
        </div>
    }
</div>

