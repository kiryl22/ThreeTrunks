<div class="tree">
    <h2 class="wood-title">Галерея</h2>
    <div ng-if="imgs.length > 0" class="container gallery-wrapper">
        <div ng-repeat="img in imgs" class="col-lg-3 col-md-4 col-xs-12 col-sm-6 gallery-img">
            <img ng-click="open(img, 'lg')" class="img-thumbnail" src="{{img.thumbnail}}" alt="{{img.text}}">
        </div>
    </div>
</div>

<script type="text/ng-template" id="viewImage">
    <div class="gallery-modal">
      <button ng-click="cancel()" type="button" class="close"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <div class="modal-header white-back">
            <h3 class="modal-title">{{img.title}}</h3>
        </div>
        <div class="modal-body">
            <img class="img-responsive" src="{{img.url}}" alt="{{img.text}}">
        </div>
        <div class="modal-footer">
            <p class="col-md-8 col-sm-10 pull-right">{{img.description}}</p>
        </div>
    </div>
</script>

