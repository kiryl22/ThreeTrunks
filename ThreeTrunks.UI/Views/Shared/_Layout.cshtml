@using System.Security.Policy
@using System.Web.Optimization
<!DOCTYPE html>
<html ng-app="threeTrunkApp" ng-controller="mainCtrl" ng-init="init(@ViewBag.galleryCategories)">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ Page.title() }} - 3stvola.by</title>
    <link rel="SHORTCUT ICON" href="@Url.Content("~/Content/images/favicon.ico")"/>

    <link href="~/Content/font.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @RenderSection("css", false)

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/threeTrunkApp")

</head>
<body>
    <div class="navbar-wrapper">
        <div class="container">
            <div class="navbar navbar-inverse navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" ng-init="navCollapsed = true" ng-click="navCollapsed = !navCollapsed" class="navbar-toggle">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand logo" href="#">
                            <img alt="3stvola" src="@Url.Content("~/Content/images/3Tree.min.png")" itemprop="logo">
                        </a>
                    </div>
                    <div collapse="navCollapsed" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li ng-click="navCollapsed = true" ng-class="{active:isActive('/')}"><a href="/">Главная</a></li>
                            <li ng-click="navCollapsed = true" ng-class="{active:isActive('/about')}"><a href="#/about">О нас</a></li>
                            <li ng-click="navCollapsed = true" ng-class="{active:isActive('/contact')}"><a href="#/contact">Контакты</a></li>
                            <li  ng-class="{active:isActive('/gallery(?=/summerhouses|/tables|/swings)')}" class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Галерея<span class="caret"></span></a>
                                <ul ng-click="navCollapsed = true"  class="dropdown-menu" role="menu">
                                    <li  ng-repeat="category in galleryCategories"><a  href="#/gallery/{{category.galleryLink}}">{{category.name}}</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderSection("scripts", false)
        @RenderSection("body", false)
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 3stvola.by</p>
        </footer>
    </div>
</body>
</html>
